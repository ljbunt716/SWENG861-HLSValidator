package validators;

import hlsfiles.HLSFileWDirectory;

public class FileBeginWithValidator extends Validator {

	public FileBeginWithValidator(HLSFileWDirectory file) {
		File = file;
	}

	public Boolean IsValid() {
		Boolean beginsWithEXTM3U = false;

		try {
			System.out.println(File.HLSText);
			beginsWithEXTM3U = (File.HLSText.matches("#EXTM3U.*"));
			if (!beginsWithEXTM3U) {
				AddValidationError("File does not begin with correct text (#EXTM3U) : " + File.FileBaseName,
						"File Begins With #EXTM3U Validation");
			}
		} catch (Exception e) {
			beginsWithEXTM3U = false;
			AddValidationError("File does not begin with correct text (#EXTM3U) : " + File.FileBaseName,
					"File Begins With #EXTM3U Validation");
		}

		return beginsWithEXTM3U;
	}

}
