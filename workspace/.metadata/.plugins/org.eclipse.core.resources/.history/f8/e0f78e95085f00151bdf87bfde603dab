package validators;

import java.util.Arrays;
import java.util.List;

import hlsfiles.HLSFileWDirectory;

public class FileHasEXTAsUpperValidator extends Validator {

	public FileHasEXTAsUpperValidator(HLSFileWDirectory file) {
		File = file;
	}

	public void Validate() {

		try {
			List<String> allWordsInFile = Arrays.asList(File.HLSText.split("#EXT"));
			for (String word : allWordsInFile) {
				if (word.toLowerCase().contains("#ext"))
					AddErrorMessage();
			}

		} catch (Exception e) {
			AddErrorMessage();
		}
	}

	private void AddErrorMessage() {
		super.AddValidationError("All mentions of EXT in file are not Uppercase : " + File.FileName,
				"File Has EXT all Uppercase Validation");
	}
}
